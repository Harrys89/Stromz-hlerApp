<Window x:Class="StromzählerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StromzählerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Canvas>
        <Image Source="/Images/Zaehler.png" Height="619" Width="649" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-8" Canvas.Top="-109" />

        <Label x:Name="applabel"
               FontFamily="Arial"
                FontSize="36"
                FontWeight="Bold"
               Foreground="Blue"
               Canvas.Left="350"
               Canvas.Top="30"
               >Willkommen
        </Label>
        <Button x:Name="eintragenbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Red"
                Background="LightGray"
                Canvas.Top="150"
                Canvas.Left="350" Click="eintragenbtn_Click"
                >Neuer Eintrag
        </Button>
        <Button x:Name="ändernbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Red"
                Background="LightGray"
                Canvas.Top="200"
                Canvas.Left="350"
                >Einträge Bearbeiten
        </Button>
        <Button x:Name="listebtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Red"
                Background="LightGray"
                Canvas.Top="250"
                Canvas.Left="350" Click="listebtn_Click"
                >Zimmerliste
        </Button>
        <Button x:Name="progschliessenbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Background="Red"
                Canvas.Top="370"
                Canvas.Left="350" Click="progschliessenbtn_Click"
                >Programm Schließen
        </Button>
    </Canvas>
</Window>

    
    
    