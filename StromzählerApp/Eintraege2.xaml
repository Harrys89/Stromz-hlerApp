<Window x:Class="StromzählerApp.Eintraege2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StromzählerApp"
        mc:Ignorable="d"
        Title="Eintraege2" Height="650" Width="800"
        WindowStartupLocation="CenterScreen">
    <Canvas
        Background="LightGray">
        <Label x:Name="zimmerlbl"
                Foreground="Black"
                FontSize="25"
                FontWeight="Bold"
                Canvas.Left="50"
                Canvas.Top="50">Zimmer:
        </Label>
        <Label x:Name="unterzaehlerIdlbl"
                Foreground="Black"
                FontSize="25"
                FontWeight="Bold"
                Canvas.Left="50"
                Canvas.Top="300">Unterzähler ID:
        </Label>
        <TextBlock x:Name="unterzaehlerIdTextBlock"
                   Background="White"
                   Width="450"
                   Height="150"
                    Foreground="Black"
                    FontSize="25"
                    FontWeight="Bold"
                    Canvas.Left="50"
                    Canvas.Top="350">
        </TextBlock>
        <TextBlock x:Name="zimmerTextBlock"
                   Background="White"
                   Width="450"
                   Height="150"
                    Foreground="Black"
                    FontSize="25"
                    FontWeight="Bold"
                    Canvas.Left="50"
                    Canvas.Top="100">
        </TextBlock>
        <Button x:Name="speichernbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Background="LightGreen"
                Canvas.Top="550"
                Canvas.Left="550">Speichern
        </Button>
        <Button x:Name="zurueckbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Background="LightBlue"
                Canvas.Top="550"
                Canvas.Left="50" Click="zurueckbtn_Click">Zurück
        </Button>
        <Button x:Name="abbrechenbtn"
                Width="200"
                Height="30"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Background="Red"
                Canvas.Top="550"
                Canvas.Left="300" Click="abbrechenbtn_Click">Abbrechen
        </Button>
    </Canvas>
</Window>
